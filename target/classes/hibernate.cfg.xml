<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.password">orlando</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/cvsDataBase</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        
        <property name="hbm2ddl.auto">update</property>
        <property name="hibernate.show_sql">true</property>
        
        <mapping class="edu.neu.project.model.Admin"></mapping>
        <mapping class="edu.neu.project.model.Customer"></mapping>
        <mapping class="edu.neu.project.model.Person"></mapping>
        <mapping class="edu.neu.project.model.UserAccount"></mapping>
        <mapping class="edu.neu.project.model.DrugCategory"></mapping>
        <mapping class="edu.neu.project.model.DrugProduct"></mapping>
        <mapping class="edu.neu.project.model.Order"></mapping>
        <mapping class="edu.neu.project.model.OrderItem"></mapping>
        <mapping class="edu.neu.project.model.Payment"></mapping>
        <mapping class="edu.neu.project.model.Supplier"></mapping>
        <mapping class="edu.neu.project.model.UserRole"></mapping>
        
    </session-factory>
</hibernate-configuration>
